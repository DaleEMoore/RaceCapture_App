#:kivy 1.9.1

<SettingsView>:
    BoxLayout:
        rcid: 'fieldContainer'
        orientation: 'horizontal'
        BoxLayout:
            orientation: 'vertical'
            spacing: 5
            FieldLabel:
                size_hint: (0.65, 1.0)
                rcid: 'fieldLabel'
                halign: 'right'
                font_size: sp(24)
                text: ''
            TextWidget:
                rcid: 'helpLabel'
                halign: 'left'
                text: ''
                color: [0.6, 0.6, 0.6, 1.0]
        BoxLayout:
            size_hint: (0.35, 1.0)
            orientation: 'vertical'
            halign: 'left'
            spacing: 5
            AnchorLayout:
                rcid: 'control'
                id: control


<SettingsMappedSpinner>:
	rcid: 'settingsCtrl'
	on_text: root.on_text(*args)

<SettingsSwitch>:	
	rcid: 'settingsCtrl'
	on_active: root.on_switch_active(args[1])

<SettingsButton>:	
	rcid: 'settingsCtrl'
	size_hint: (None, None)
	size: (dp(80), dp(40))
	on_release: root.on_button_active(*args)
	
<SettingsTextField>:
	rcid: 'settingsCtrl'
	size_hint: (1.0, 0.2)
	on_text: root.on_text(*args)
