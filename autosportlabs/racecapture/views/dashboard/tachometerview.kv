<TachometerView>:
    rcid: 'tachview'
	AnchorLayout:
		anchor_x: 'center'
		anchor_y: 'center'
		AnchorLayout:
			anchor_x: 'right'
			anchor_y: 'bottom'
			BoxLayout:
				size_hint: (0.8, 0.6)
				orientation: 'horizontal'
				AnchorLayout:
					size_hint: (0.25, 1.0)
					anchor_x: 'center'
					anchor_y: 'center'
					BigNumberView:
                        rcid: 'bignumberview_tach'
						size_hint: (0.8, 0.8)
						channel: 'CurrentLap'
						warning_color: [0.2, 0.2, 0.2, 1.0]
						alert_color: [0.2, 0.2, 0.2, 1.0]
				BoxLayout:
					size_hint: (0.7, 1.0)
					orientation: 'vertical'
					CurrentLaptime:
						rcid: 'curLap'
                        normal_color: [1.0, 1.0 , 1.0, 1.0]						
					BoxLayout:
						orientation: 'horizontal'
						TimeDelta:
							rcid: 'delta'
							channel: 'LapDelta'
							halign: 'right'
							valign: 'middle'
							value: None
							size_hint_x: 0.8
						BoxLayout:
                            size_hint_x: 0.2
		AnchorLayout:
			anchor_x: 'left'
			anchor_y: 'center'
			orientation: 'horizontal'
			TachometerGauge:
				size_hint_y: 0.8
				rcid: 'tach'
				channel: 'RPM'
				min: 0
				max: 10000
