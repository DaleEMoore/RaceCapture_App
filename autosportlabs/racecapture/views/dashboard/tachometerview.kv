<TachometerView>:
    rcid: 'tachview'
	AnchorLayout:
		anchor_x: 'center'
		anchor_y: 'center'
		AnchorLayout:
			anchor_x: 'center'
			anchor_y: 'bottom'
			BoxLayout:
				size_hint: (1.0, 0.6)
				orientation: 'horizontal'
                BoxLayout:
                    size_hint_x: 0.02
				AnchorLayout:
					size_hint_x: 0.23
					anchor_x: 'left'
					anchor_y: 'center'
					BigNumberView:
                        rcid: 'bignumberview_tach'
						size_hint: (1.0, 0.8)
						channel: 'CurrentLap'
						warning_color: [0.2, 0.2, 0.2, 1.0]
						alert_color: [0.2, 0.2, 0.2, 1.0]
				BoxLayout:
					size_hint: (0.70, 1.0)
					orientation: 'vertical'
					CurrentLaptime:
						rcid: 'curLap'
						halign: 'right'
                        normal_color: [1.0, 1.0 , 1.0, 1.0]						
                    TimeDelta:
                        rcid: 'delta'
                        channel: 'LapDelta'
                        halign: 'right'
                        valign: 'middle'
                        value: None
                        size_hint_x: 0.83
                BoxLayout:
                    size_hint_x: 0.02
		AnchorLayout:
			anchor_x: 'center'
			anchor_y: 'top'
			orientation: 'horizontal'
            padding: (sp(5), sp(10))
			TachometerGauge:
				size_hint_y: 0.4
				size_hint_x: 0.96
				rcid: 'tach'
				channel: 'RPM'
				min: 0
				max: 10000
