<DashboardView>:
    AnchorLayout:
    	BoxLayout:
    		orientation: 'vertical'
    		Carousel:
    			rcid: 'screens'
                on_current_slide: root.on_current_slide(args[1])    			
    			size_hint_y: 0.90
    			loop: True
    		BoxLayout:
    			size_hint_y: 0.10
    			orientation: 'horizontal'
    			IconButton:
    				color: [1.0, 1.0, 1.0, 1.0]
    				font_size: self.height * 1.2
    				text: ' \357\203\231'
    				size_hint_x: 0.4
    				size_hint_y: 1.1
    				on_release: root.on_nav_left()
    			DigitalGauge:
    				rcid: 'left_bottom'
    			DigitalGauge:
    				rcid: 'center_bottom'
    			DigitalGauge:
    				rcid: 'right_bottom'
    			IconButton:
    				color: [1.0, 1.0, 1.0, 1.0]
    				font_size: self.height * 1.2
    				text: '\357\203\232 '
    				size_hint_x: 0.4
    				size_hint_y: 1.1
    				on_release: root.on_nav_right()
        AnchorLayout:
            anchor_x: 'left'
            anchor_y: 'top'
            IconButton:
                id: preferences_button
                size_hint_y: 0.1
                size_hint_x: 0.1
                text: u'\uf013'
                halign: 'left'
                color: [1.0, 1.0, 1.0, 0.2]
                on_press: root.on_preferences()

