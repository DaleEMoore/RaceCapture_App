#:kivy 1.9.1

<WirelessConfigView>:
    orientation: 'vertical'
    spacing: dp(5)
    ScrollContainer:
        id: scroller
        size_hint_y: 1
        do_scroll_x: False
        GridLayout:
            id: wireless_settings
            row_default_height: root.height * 0.1
            size_hint_y: None
            height: max(self.minimum_height, scroller.height)
            cols: 1
            spacing: [dp(10),dp(10)]
            padding: [dp(5),dp(5)]
            HSeparator:
                text: 'Bluetooth'
            SettingsView:
                rcid: 'btEnable'
                label_text: 'Bluetooth'
                help_text: 'If the Bluetooth module is connected, enable it here'
            HSeparator:
                text: 'WiFi'
            SettingsView:
                id: wifi_enabled
                label_text: 'WiFi Module'
            HSeparator:
                text: 'Client Mode Configuration'
            Label:
                text: 'Use this mode to setup the wifi module to connect [b]to[/b] an existing wireless network or a GoPro. If the network is a GoPro, you must enable Access Point mode and connect your phone or tablet via the RaceCapture network.'
                markup: True
                text_size: (self.parent.width, None)
            SettingsView:
                id: client_mode
                label_text: 'Client Mode'
            GridLayout:
                spacing: (dp(30), dp(5))
                cols: 2
                FieldLabel:
                    text: 'SSID'
                    halign: 'right'
                ValueField:
                    id: client_ssid
                    disabled: False
                    on_text: root.on_client_ssid(*args)
            GridLayout:
                spacing: (dp(30), dp(5))
                cols: 2
                FieldLabel:
                    text: 'Password'
                    halign: 'right'
                ValueField:
                    id: client_password
                    disabled: False
                    on_text: root.on_client_password(*args)
            HSeparator:
                text: 'Access Point Mode Configuration'
            Label:
                text: 'Use this mode to create a wireless network for your phone or table to connect to.'
                markup: True
                text_size: (self.parent.width, None)
            SettingsView:
                id: ap_mode
                label_text: 'Access Point Mode'
            GridLayout:
                spacing: (dp(30), dp(5))
                cols: 2
                FieldLabel:
                    text: 'SSID'
                    halign: 'right'
                ValueField:
                    id: ap_ssid
                    disabled: False
                    on_text: root.on_ap_ssid(*args)
            GridLayout:
                spacing: (dp(30), dp(5))
                cols: 2
                FieldLabel:
                    text: 'Password'
                    halign: 'right'
                ValueField:
                    id: ap_password
                    disabled: False
                    on_text: root.on_ap_password(*args)
            SettingsView:
                id: ap_encryption
                label_text: 'Encryption'
            HSeparator:
                text: 'Cellular Configuration'
            SettingsView:
                size_hint_y: 0.20
                rcid: 'cellEnable'
                label_text: 'Cellular Module'
                help_text: 'Enable if the Real-time telemetry module is installed'

            SettingsView:
                size_hint_y: 0.5
                rcid: 'cellprovider'
                label_text: 'Cellular Provider'
                help_text: 'Select the cellular provider, or specify custom APN settings'
            HSeparator:
                text: 'Custom Cellular Settings'
            GridLayout:
                cols: 2
                FieldLabel:
                    text: 'APN Host'
                    halign: 'right'
                ValueField:
                    rcid: 'apnHost'
                    disabled: True
                    on_text: root.on_apn_host(*args)
            GridLayout:
                cols: 2
                FieldLabel:
                    halign: 'right'
                    text: 'APN User Name'
                ValueField:
                    rcid: 'apnUser'
                    size_hint_y: 1
                    disabled: True
                    on_text: root.on_apn_user(*args)
            GridLayout:
                cols: 2
                FieldLabel:
                    halign: 'right'
                    text: 'APN Password'
                ValueField:
                    rcid: 'apnPass'
                    disabled: True
                    size_hint_y: 1
                    on_text: root.on_apn_pass(*args)
