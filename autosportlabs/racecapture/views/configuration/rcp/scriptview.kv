#:kivy 1.9.1

<LuaCodeInput>:

<LuaScriptingView>:
    BoxLayout:
        spacing: dp(10)
        padding: (dp(10), dp(10))
        orientation: 'vertical'
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.9
            ScrollContainer:
                size_hint_y: 0.75
                do_scroll_x:False
                id: lua_script_sv
                LuaCodeInput:
                    id: lua_script
                    size_hint_y: None
                    font_name: 'resource/fonts/RobotoMono-Regular.ttf'
                    font_size: sp(16)
                    height: max(self.minimum_height, lua_script_sv.height)
                    on_text: root.on_script_changed(*args)
            Splitter:
                horizontal: False
                sizable_from: 'top'
                ScrollContainer:
                    size_hint_y: 0.25
                    id: logfile_sv
                    do_scroll_x:False
                    Label:
                        canvas.before:
                            Color:
                                rgba: ColorScheme.get_dark_background()
                            Rectangle:
                                pos: self.pos
                                size: self.size
                        font_name: 'resource/fonts/RobotoMono-Regular.ttf'
                        id: logfile
                        color: (1.0, 1.0, 1.0, 1.0)
                        background_color: (0.8, 0.8, 0.8, 1.0)
                        size_hint_y: None
                        text_size: self.width, None
                        height: max(self.texture_size[1], logfile_sv.height)
        BoxLayout:
            height: dp(30)
            size_hint_y: None
            orientation: 'horizontal'
            BoxLayout:
            	size_hint_x: 0.3
            	orientation: 'horizontal'
            	CheckBox:
                    id: poll_log
            		size_hint_x: 0.25
            		on_active: root.enable_polling(*args)
            	LabelButton:
            		size_hint_x: 0.75
            		halign: 'left'
                    text: 'Poll log'
                    on_press: root.toggle_polling()

			BoxLayout:
				size_hint_x: 0.25
				spacing: dp(5)
				orientation: 'horizontal'
        		LogLevelSpinner:
        			size_hint_x: 0.5
        			size_hint_y: 1.0
                    id: log_level
        			on_control: root.set_logfile_level(*args)
            Label:
                size_hint_x: 0.1
            LabelIconButton:
                size_hint_x: None
                width: dp(90)
                title: "Copy"
                icon: u'\uf0c5'
                on_press: root.copy_log()
            BoxLayout:
                size_hint_x: 0.03
            LabelIconButton:
            	size_hint_x: None
                width: dp(90)
            	title: "Clear"
            	icon: "\357\200\215"
            	on_press: root.clear_log()
            BoxLayout:
                size_hint_x: 0.03                                               	
            LabelIconButton:
                size_hint_x: None
                width: dp(90)
                title: "Run"
                icon: "\357\200\241"
                on_press: root.run_script()