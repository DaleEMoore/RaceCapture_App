#:kivy 1.9.1

<LuaCodeInput>:

<LuaScriptingView>:
    BoxLayout:
        spacing: dp(10)
        padding: (dp(10), dp(10))
        orientation: 'vertical'
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.9
            ScrollContainer:
                size_hint_y: 0.75
                do_scroll_x:False
                id: luaScriptScrollView
                LuaCodeInput:
                	rcid: 'script'
                    size_hint_y: None
                    font_name: 'resource/fonts/RobotoMono-Regular.ttf'
                    font_size: sp(16)
                    height: max(self.minimum_height, luaScriptScrollView.height)
                    on_text: root.on_script_changed(*args)
            Splitter:
                horizontal: False
                sizable_from: 'top'
                ScrollContainer:
                    size_hint_y: 0.25
                    id: loggingScrollView
                    rcid: 'logfileSv'
                    do_scroll_x:False
                    CodeInput:
                    	rcid: 'logfile'
                    	color: (1.0, 1.0, 1.0, 1.0)
                    	background_color: (0.8, 0.8, 0.8, 1.0)
                        size_hint_y: None
                        height: max(self.minimum_height, loggingScrollView.height)
        BoxLayout:
            height: dp(30)
            size_hint_y: None
            orientation: 'horizontal'
            BoxLayout:
            	size_hint_x: 0.3
            	orientation: 'horizontal'
            	CheckBox:
            		rcid: 'pollLog'
            		size_hint_x: 0.25
            		on_active: root.enableScript(*args)
            	FieldLabel:
            		size_hint_x: 0.75
            		halign: 'left'
            		text: 'Poll logfile'

			BoxLayout:
				size_hint_x: 0.25
				spacing: dp(5)
				orientation: 'horizontal'
            	FieldLabel:
            		size_hint_x: 0.5
            		halign: 'right'
            		text: 'Level'
        		LogLevelSpinner:
        			size_hint_x: 0.5
        			size_hint_y: 1.0
        			rcid: 'logLevel'
        			on_control: root.on_loglevel_selected(*args)
            Label:
                size_hint_x: 0.1         	
            LabelIconButton:
            	size_hint_x: None
            	width: dp(100)
            	title: "Clear"
            	icon: "\357\200\215"
            	on_press: root.clearLog()
            Label:
                size_hint_x: 0.03                                               	
            LabelIconButton:
                size_hint_x: None
                width: dp(100)
                title: "Run"
                icon: "\357\200\241"
                on_press: root.runScript()
            	