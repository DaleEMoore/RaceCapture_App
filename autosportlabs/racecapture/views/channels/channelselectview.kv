<ChannelItemButton>:
    background_color: [0, 0, 0, 0]
    background_down: ''
    font_size: dp(25)
    font_name: 'resource/fonts/ASL_light.ttf'
    color: [1.0, 1.0, 1.0, 0.8]
    #background_normal: ''
    deselected_color: [0.3, 0.3, 0.3, 1.0]

<ChannelSelectorView>:
    orientation: 'vertical'
    ListView:
        size_hint_y: 0.8
        id: channelList
        font_size: root.height * 0.05

<ChannelSelectView>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: 'vertical'
    	ListView:
    		size_hint_y: 0.8
    		id: channelList
    		rcid: 'channelsList'
    		font_size: dp(100)
    	IconButton:
    		size_hint_y: 0.2
			text: "\357\200\214"
    		on_press: root.on_close()
